          X-Badge-Identifier:
            description: Alpha-numeric, maximum length is 12. Represents the end-user who is interacting with the CSP systems. It is used within the CSP systems to facilitate message routing back to the originator.
            type: string
            required: true
            example: DHL123

        (annotations.scope): "write:customs-inventory-linking-imports"
        securedBy: [ sec.oauth_2_0: { scopes: [ "write:customs-inventory-linking-imports" ] } ]
        responses:
